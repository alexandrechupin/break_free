<div class="row header-banner">
  <div class="container my-5">
    <h1>Constituer un nouveau dossier</h1>
  </div>
</div>


<div class="container my-5">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs col-6 mx-auto">
      <%= f.input :email,
                  required: true,
                  label: "Adresse email",
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  label: "Mot de passe",
                  hint: ("#{@minimum_password_length} caractères au minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  label: "Confirmation de mot de passe",
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="row form-actions justify-content-center">
      <%= f.button :submit, "Créer son dossier", class: "button-primary" %>
    </div>
  <% end %>

  <div class="text-right">
   <%= render "devise/shared/links" %>
  </div>
</div>
