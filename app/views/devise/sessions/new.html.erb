<div class="row header-banner">
  <div class="container my-5">
    <h1>Accéder à votre dossier</h1>
  </div>
</div>

<div class="container my-5">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs col-6 mx-auto">
      <%= f.input :email,
                  label: "Adresse email",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  label: "Mot de passe",
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="row form-actions justify-content-center">
      <%= f.button :submit, "Accéder au dossier", class: "button-primary" %>
    </div>
  <% end %>

    <div class="text-right">
     <%= render "devise/shared/links" %>
    </div>

</div>

