<div class="mt-3 border">

  <div class="card-action ml-0 mb-0">
    <h5>Votre dossier</h5>
  </div>
  <div class="progress">
    <% if @incident.description.nil? && @incident.proofs.empty? && @incident.proofs.empty?%>
      <div class="progress-bar bg-warning" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
    <% elsif @incident.description.nil? == false && @incident.proofs.empty? && @incident.testimonies.empty? %>
      <div class="progress-bar bg-warning" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="50">50%</div>
    <% elsif @incident.description.nil? && @incident.proofs.empty? == false && @incident.testimonies.empty? %>
      <div class="progress-bar bg-warning" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="50">50%</div>
    <% elsif @incident.description.nil? && @incident.proofs.empty? && @incident.testimonies.empty? == false %>
      <div class="progress-bar bg-warning" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="50">50%</div>
    <% elsif @incident.description.nil? == false && @incident.proofs.empty? == false && @incident.testimonies.empty? %>
      <div class="progress-bar bg-success" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="75">75%</div>
    <% elsif @incident.description.nil? == false && @incident.proofs.empty? && @incident.testimonies.empty? == false%>
      <div class="progress-bar bg-success" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="75">75%</div>
    <% elsif @incident.description.nil? && @incident.proofs.empty? == false && @incident.testimonies.empty? == false%>
      <div class="progress-bar bg-success" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="75">75%</div>
    <% else %>
      <div class="progress-bar bg-success" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">100%</div>
    <% end %>
  </div>
  <div class="pl-3 background-white pt-4">
    <div class="d-flex justify-content-between pb-3">
      <h5> <i class="far fa-check-square"></i> Votre incident </h5>
      <span><%= link_to "Modifier", modify_event_incident_path(@incident), class: "button-primary mr-3" %></span>
    </div>
    <div class="d-flex justify-content-between pb-3">
      <% if @incident.description.nil? %>
        <h5> <i class="far fa-square"></i> Votre témoignage</h5>
        <span><%= link_to "Ajouter", edit_incident_path, class: "button-primary mr-3" %></span>
      <% else %>
        <h5> <i class="far fa-check-square"></i> Votre témoignage</h5>
        <span><%= link_to "Modifier", edit_incident_path, class: "button-primary mr-3" %></span>
      <% end %>
    </div>
      <div class="d-flex justify-content-between pb-3">
        <% if @incident.proofs.empty? %>
          <h5> <i class="far fa-square"></i> Ajouter des preuves </h5>
          <span><%= link_to "Ajouter", incident_proofs_path(@incident), class: "button-primary mr-3" %></span>
        <% else %>
          <h5> <i class="far fa-check-square"></i> Ajouter des preuves</h5>
          <span><%= link_to "Modifier", incident_proofs_path(@incident), class: "button-primary mr-3" %></span>
        <% end %>
      </div>
     <div class="d-flex justify-content-between pb-3">
      <% if @incident.testimonies.empty? %>
        <h5> <i class="far fa-square" ></i> Collecter des témoignages </h5>
        <span><%= link_to "Ajouter", incident_testimonies_path(@incident), class: "button-primary mr-3" %></span>
      <% else %>
        <h5> <i class="far fa-check-square"></i> Collecter des témoignages</h5>
        <span><%= link_to "Modifier", incident_testimonies_path(@incident), class: "button-primary mr-3" %></span>
      <% end %>
    </div>
    <div class="d-flex justify-content-between pb-3">
      <h5> <i class="fas fa-trash-alt"></i> Détruire mon dossier<p>Cela supprimera définitivement votre compte</p></h5>
      <%= link_to incident_path(@incident), method: 'delete', data: {:confirm => 'Cette action détruira toute trace de votre dossier. Nous supprimerons également votre témoignage et toutes les preuves afférentes de notre base. Votre compte sera également supprimé. Êtes-vous sûrs ?'} do %>
        <div class="button-danger mr-3">Supprimer</div>
      <% end %>
    </div>
  </div>

</div>

