<div class="mt-5 border">

  <div class="card-action ml-0 mb-0">
    <h5>Complétez votre dossier</h5>
  </div>
  <div class="progress">
    <% if @incident.description.nil? && @incident.proofs.empty? %>
      <div class="progress-bar" role="progressbar" style="width: 40%;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100">40%</div>
    <% elsif @incident.description.nil? || @incident.proofs.empty? %>
      <div class="progress-bar" role="progressbar" style="width: 70%;" aria-valuenow="70" aria-valuemin="0" aria-valuemax="70">70%</div>
    <% else %>
      <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">100%</div>
    <% end %>
  </div>
  <div class="pl-3 background-white pt-3">
    <div class="d-flex justify-content-between pb-3">
      <h5> ✅ Votre incident </h5>
      <span><%= link_to "Modifier", modify_event_incident_path(@incident), class: "button-primary mr-3" %></span>
    </div>
    <div class="d-flex justify-content-between pb-3">
      <% if @incident.description.nil? %>
        <h5> ❌ Votre témoignage</h5>
        <span><%= link_to "Ajouter", edit_incident_path, class: "button-primary mr-3" %></span>
      <% else %>
        <h5> ✅ Votre témoignage</h5>
        <span><%= link_to "Modifier", edit_incident_path, class: "button-primary mr-3" %></span>
      <% end %>
    </div>
     <div class="d-flex justify-content-between pb-3">
      <% if @incident.testimonies.empty? %>
        <h5> ❌ Collecter des témoignages </h5>
        <span><%= link_to "Ajouter", incident_testimonies_path(@incident), class: "button-primary mr-3" %></span>
      <% else %>
        <h5> ✅ Collecter des témoignages</h5>
        <span><%= link_to "Modifier", incident_testimonies_path(@incident), class: "button-primary mr-3" %></span>
      <% end %>
    </div>
    <div class="d-flex justify-content-between pb-3">
      <% if @incident.proofs.empty? %>
        <h5> ❌ Ajouter des preuves </h5>
        <span><%= link_to "Ajouter", incident_proofs_path(@incident), class: "button-primary mr-3" %></span>
      <% else %>
        <h5> ✅ Ajouter des preuves</h5>
        <span><%= link_to "Modifier", incident_proofs_path(@incident), class: "button-primary mr-3" %></span>
      <% end %>
    </div>
    <div class="d-flex justify-content-between pb-3">
      <h5> <i class="fas fa-trash-alt"></i> Détruire mon dossier<p>Cela supprimera définitivement votre compte</p></h5>
      <%= link_to incident_path(@incident), method: 'delete', data: {:confirm => 'Cette action détruira toute trace de votre dossier. Nous supprimerons également votre témoignage et toutes les preuves afférentes de notre base. Votre compte sera également supprimé. Êtes-vous sûrs ?'} do %>
        <div class="button-danger mr-3">Supprimer</div>
      <% end %>
    </div>
  </div>

</div>

