<div class="d-flex align-items-center justify-content-center file-banner pt-3 pb-3">
  <p class="circle mb-0">!</p>
    <% if @incident.description.nil? && @incident.proofs.empty? %>
      <span class="pl-3">Votre dossier n’est complet qu’à 40%. Certains actions requièrent un dossier complet afin que nous puissions vous aider au mieux.</span>
    <% elsif @incident.description.nil? || @incident.proofs.empty? %>
      <span class="pl-3">Votre dossier n’est complet qu’à 70%. Certains actions requièrent un dossier complet afin que nous puissions vous aider au mieux.</span>
    <% else %>
      <span class="pl-3">félicitations, votre dossier est complet à 100%.</span>
    <% end %>
</div>

<div class="container mt-5 pb-3">

  <h1>Mon dossier</h1>

  <div class="mt-5">

    <span><%= render 'file-box' %></span>

  </div>

  <div class="mt-5">



    <h2>Ce que vous pouvez faire</h2>

    <%= link_to incident_recommendations_path(@incident) do %>
      <div class="card-action ml-0 mt-3">
        <h5>📖 Consulter les recommandations applicables à votre situation</h5>
        <i class="fas fa-arrow-circle-right"></i>
      </div>
    <% end %>

    <% @incident.get_recommendations.each do |recommendation| %>
      <% if recommendation.title == "Transmettre un rapport anonyme à l'établissement concerné" %>
        <%= link_to(incident_reports_path(@incident), :method => :post) do %>
        <div class="card-action ml-0 mt-3">
          <h5>📩  <%= recommendation.title %></h5>
          <i class="fas fa-arrow-circle-right"></i>
        </div>
        <% end %>
      <% elsif recommendation.title == "Déposer plainte" %>
        <%= link_to(create_complaint_incident_report_path(@incident)) do %>
        <div class="card-action ml-0 mt-3">
          <h5>📩  <%= recommendation.title %></h5>
          <i class="fas fa-arrow-circle-right"></i>
        </div>
        <% end %>
      <% elsif recommendation.is_an_action %>
        <div class="card-action ml-0 mt-3">
          <h5>📩  <%= recommendation.title %></h5>
          <i class="fas fa-arrow-circle-right"></i>
        </div>
      <% end %>
    <% end %>

  </div>

    <%= link_to incident_path(@incident), method: 'delete', data: {:confirm => 'Cette action détruira toute trace de votre dossier. Nous supprimerons également votre témoignage et toutes les preuves afférentes de notre base. Votre compte sera également supprimé. Êtes-vous sûrs ?'} do %>
      <div class="card-action ml-0 mt-3">
        <div>
        <h5 class="pt-3">❌ Détruire mon dossier<p>Cela supprimera définitivement votre compte</p> </h5>
        </div>
        <i class="fas fa-arrow-circle-right"></i>
      </div>
    <% end %>

</div>

