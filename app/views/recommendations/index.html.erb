<div class="row header-banner">
  <div class="container">
    <div class="row justify-content-center mt-3">
      <div class="stepper">
        <div class = "center-step" >
          <p class="circle">1</p>
          <p class="step-title">Événement</p>
        </div>
        <div class = "center-step">
          <p class="circle">2</p>
          <p class="step-title">Localisation</p>
        </div>
        <div class = "center-step active">
          <p class="circle">3</p>
          <p class="step-title">Recommandations</p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container col-8">

<div class="mt-5 mb-5">
  <h1>Les bons réflexes</h1>
  <%# if @incident.place_type == "dans un lieu accueillant du public" || "dans mon lieu de travail"%>
     <%# end %>
  <% @recommendations.each do |recommendation| %>
    <div class="mt-3">
      <h3>
          <i class="far fa-circle tickable"></i>
          <%= link_to "#description#{recommendation.id}", class: "toggle" do %>
           <%= recommendation.title  %>
          <i class="fas fa-angle-down pl-1" id=<%= "arrow#{recommendation.id}" %>></i>
        <% end %>
      </h3>
    </div>
    <div class="toggle-content" id=<%="description#{recommendation.id}" %>>
      <p> <%= recommendation.description %></p>
    </div>
  <% end %>

</div>

</div>


<% if user_signed_in? %>

  <div class="d-flex justify-content-center p-3 mb-4">
    <%= link_to 'Retour au dossier', incident_path(current_user.incident), class: 'button-primary' %>
  </div>

<% else %>

  <div class="file-banner mb-2">
    <div class="container col-8 p-4">
      <h5> Nous pouvons vous aider à  créer votre dossier. <br>Pour cela, nous vous invitons à vous <strong> créer un compte </strong> afin de pouvoir y accéder ultérieurement.</h5>
    </div>
  </div>

  <div class="d-flex justify-content-center p-3 mb-4">
    <%= link_to 'Créer son compte', assign_user_incident_path(@incident), class: 'button-primary' %>
  </div>

<% end %>



