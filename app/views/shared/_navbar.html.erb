<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag ("logo-b-f.png"), class: "ml-5" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "A propos de nous", about_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Statistiques", stats_path, class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= link_to "Mon dossier", '#', class: "nav-link dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% unless current_user.incident.nil? %>
              <%= link_to "Accéder au dossier", incident_path(current_user.incident), class: "dropdown-item" %>
            <% end %>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item d-inline-flex">
          <%= link_to "Mon dossier", new_user_session_path, class: "nav-link" %>
          <i class="fas fa-user picto"></i>
        </li>
      <% end %>
    </ul>
  </div>
</div>
